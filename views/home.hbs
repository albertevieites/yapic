<div class="home__title">
  <h1>{{user.username}}'s Board</h1>
</div>

<div class="home__grid">
  {{#each user.posts}}
    <div class="home__card stacked featured">
      <img class="home__card-img post-img {{_id}}" src="{{postPhotoUrl}}" alt="{{title}}" />
      <div class="home__card-content">
          <h4 class="home__card-title">{{title}}</h4>
          <p class="home__card-description">{{description}}</p>
          <div class="home__card-tags">
          {{#each tags}}
            <span class="span-tags">
              <p>{{this}}</p>
            </span>
          {{/each}}
          </div>
        <form action="/post/delete/{{_id}}" method="POST">
          <button class="btn btn-delete" type="submit">
            <span class="mdi mdi-delete"></span>
            <span class="mdi mdi-delete-empty"></span>
            <span>DELETE</span>
          </button>
        </form>
      </div>
    </div>
  {{/each}}
</div>

<div class="match-scroller snaps-inline">
  {{#each myMatches}}
    <div class="match-card">
      <a href="/match/{{_id}}"><img
          src="{{userPhotoUrl}}"
          alt="match-img"
        /></a>
      <p>Matched with {{username}}</p>
    </div>
  {{/each}}
</div>

<footer class="footer__board">
  <div class="post__button">
      <a href="/post/new">New Post</a>
    </div>
</footer>