<div class="match-div">
  <h1>{{username}}'s Profile</h1>

  <img id="profile-img" src="{{userPhotoUrl}}" alt="User-img" />

  <div>
    <h4>Age</h4>
    <p>{{age}}</p>
  </div>

  <div>
    <h4>Genre</h4>
    <p>{{genre}}</p>
  </div>

  <div>
    <h4>Country</h4>
    <p>{{country}}</p>
  </div>

  <div>
    <h4>Interests</h4>
    {{#each interests}}
      <p>{{this}}</p>
    {{/each}}
  </div>
  <form>
    <button
      type="button"
      class="btn messageBtn"
      data-toggle="modal"
      data-target="#exampleModal"
      data-whatever="match-message"
    >Send a message</button>

  </form>

</div>

<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Get in touch with
          <strong>{{username}}</strong></h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>

          <div class="form-group">
            <label for="message-text" class="col-form-label">Message:</label>
            <textarea class="form-control" id="message-text">Hi, how are you?
              Let's chat &#128512;
            </textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-dismiss="modal"
        >Close</button>
        <button type="button" class="btn modalMessBtn">Send message</button>
      </div>
    </div>
  </div>
</div>