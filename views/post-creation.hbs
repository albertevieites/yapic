<div class="postnew-parent">
  <div class="postnew-container">
    <h1>Create a new post</h1>
    <form
      action="/post/new"
      method="POST"
      enctype="multipart/form-data"
      class="postnewForm"
    >
  
        <label for="title">Title</label>
        <input type="text" name="title" required />


        <label for="description">Description</label>
        <textarea type="text" name="description" required></textarea>

        <label>Image</label>
        <input class="inp" type="file" name="postPhotoUrl" />
        </label>

        <label for="tags" class="label-flex">
          Tags
          <select name="tags" id="tags" multiple>
            {{#each enumOptions}}
              <option value="{{this}}">{{this}}</option>
            {{/each}}
          </select>
        </label>

      <div>
        <button type="submit" class="btn createBtn">Create</button>
      </div>
    </form>

  </div>
</div>